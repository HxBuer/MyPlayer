<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="right"
        android:padding="5dp"
        android:src="@mipmap/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_person_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/bandit" />
        <LinearLayout
            android:id="@+id/ll_login_status"
            android:onClick="click_login"
            android:gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_person_name"
                android:text="未登录"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_person_status"
                android:text="点击登录>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#ffffff"
            android:drawableTop="@drawable/like"
            android:text="关注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableTop="@drawable/collect"
            android:text="收藏"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableTop="@drawable/history_black"
            android:text="观看历史"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableTop="@drawable/remake"
            android:text="我的评论"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22dp"
            android:text="@string/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/edit"
            android:layout_width="20dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_person_email"
            android:enabled="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="手机号:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_person_phone"
            android:enabled="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
